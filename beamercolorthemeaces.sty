\setbeamercolor{alerted text}{fg=acesorange}
\setbeamercolor{example text}{fg=acesgreen}

% -----------------------------------------------------------------------------



% -----------------------------------------------------------------------------
% BLOCK ENVIRONEMENTS

\setbeamercolor{block title}{fg=acesgreen,bg=acesblue!50!black}
\setbeamercolor{block body}{fg=black,bg=acesblue!20!white}

\setbeamercolor{block title example}{fg=white,bg=acesgreen!50!black}
\setbeamercolor{block body example}{fg=black,bg=acesgreen!20!white}

\setbeamercolor{block title alerted}{fg=white,bg=acesorange!50!black}
\setbeamercolor{block body alerted}{fg=black,bg=acesorange!20!white}

\setbeamercolor{note}{fg=black,bg=acesyellow!60!white}

